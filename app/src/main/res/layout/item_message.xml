<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_message_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#ff3a31"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="删除" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:background="#f9f9fd"
        android:orientation="horizontal">
        <com.huabeina.pll.huiyu.view.CircleImageView
            android:id="@+id/iv_item_message_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/kenan"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_item_message_icon"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_item_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流信息"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_item_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:56"
                    android:layout_centerVertical="true"
                    android:textColor="#a6a6a6"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_item_message_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="订单已发货，请注意查收"
                    android:textColor="#a6a6a6"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ebebeb"
                    android:layout_gravity="bottom"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoFrameLayout>